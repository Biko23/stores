extends layout
block content
    div.bodyCenter
        form(action="." method="POST")
            label.formContent(for="fname") First Name:
            input(type="text" id="fname" name="fname")
            br
            label.formContent(for="lname") Last Name:
            input(type="text" id="lname" name="lname")
            br
            input(type="radio" name="gender" value="Male")
            label.formContent Male
            input(type="radio" name="gender" value="Female")
            label.formContent Female
            br
            label.formContent(for="country") Country:
            input(type="text" name="country" id="country")
            br
            label.formContent(for="city") City:
            input(type="text" name="city" id="city")
            br
            input(type="radio" name="designation" value="staff")
            label.formContent Staff
            input(type="radio" name="designation" value="client")
            label.formContent Client
            br
            label.formContent(for="nin") NIN:
            input(type="text" id="nin" name="nin")
            br
            label.formContent(for="eid") EIN:
            input(type="text" name="eid" id="eid")
            br
            input(type="submit" value="submit")